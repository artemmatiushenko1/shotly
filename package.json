{
  "name": "shotly",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "build": "turbo build",
    "clean": "chmod +x ./clean.sh && ./clean.sh",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@shotly/eslint-config": "workspace:*",
    "@shotly/typescript-config": "workspace:*",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "turbo": "2.5.4",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs}": [
      "pnpm turbo lint"
    ],
    "*.{ts,tsx,md,json}": [
      "pnpm format"
    ]
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.15.4+sha512.b2dc20e2fc72b3e18848459b37359a32064663e5627a51e4c74b2c29dd8e8e0491483c3abb40789cfd578bf362fb6ba8261b05f0387d76792ed6e23ea3b1b6a0"
}
