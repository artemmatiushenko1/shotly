{
  "extends": "@shotly/typescript-config/nextjs.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@/auth": ["./auth"],
      "@shotly/ui/*": ["../../packages/ui/src/*"]
    },
    "declaration": false,
    "declarationMap": false
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "./src/types/auth.d.ts"
  ],
  "exclude": ["node_modules"]
}
