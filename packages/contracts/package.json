{
  "name": "@shotly/contracts",
  "scripts": {
    "dev": "pnpm build --watch",
    "build": "tsc -b -v",
    "format": "prettier --write \"src/**/*.{ts,tsx,md,json,js}\""
  },
  "files": [
    "./dist/**"
  ],
  "typesVersions": {
    "*": {
      "*": [
        "src/*"
      ]
    }
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./*": {
      "import": "./dist/*.js",
      "require": "./dist/*.js"
    }
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "@shotly/typescript-config": "workspace:*"
  },
  "dependencies": {
    "@ts-rest/core": "^3.52.1",
    "zod": "^3.25.74"
  }
}
